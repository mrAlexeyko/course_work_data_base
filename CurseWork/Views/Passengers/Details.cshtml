@model CurseWork.Models.Passenger

@{
    ViewData["Title"] = "Деталі пасажира";
}

<h1>Деталі пасажира</h1>

<div>
    <h4>Пасажир</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Прізвище
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Номер паспорта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassportNumber)
        </dd>
        <dt class="col-sm-2">
            Дата народження
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            В розшуку
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InSearch)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PassengerId">Редагувати</a> |
    <a asp-action="Index">Повернутися до списку</a>
</div>
