@model CurseWork.Models.Ticket

@{
    ViewData["Title"] = "Видалити квиток";
}

<h1>Видалити квиток</h1>

<h3>Ви впевнені, що хочете видалити цей квиток?</h3>
<div>
    <h4>Квиток</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PassengerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassengerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TicketId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
